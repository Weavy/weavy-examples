@model RoleSearchResult
@{
    Title = "Roles";
    Back = Url.Action<ManageController>(c => c.Index());
}


@section fab {
    <div class="fab">
        <a class="btn btn-round btn-primary" href="@(Url.Action<RolesController>(c => c.New()))" title="Add role">@Svg.Icon("plus")</a>
    </div>
}

<div class="container-fluid my-3">
    @(Html.FilterForm<RolesController>(c => c.Index(null), Model.Query))

    <table class="table table-hover table-roles">
        <thead>
            <tr>
                <th class="table-icon"></th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-right">Members</th>
                <th class="table-icon"></th>
            </tr>
        </thead>
        <tbody id="infinite-scroll-target">
            @{ Html.RenderPartial("_RoleTable", Model); }
        </tbody>
    </table>
    @Html.ScrollMore(Model)


</div>
