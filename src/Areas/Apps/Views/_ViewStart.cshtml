@{
    if (WeavyRequestContext.Current.Content != null) {
        Layout = "~/Views/Content/_Layout.cshtml";
    } else if (WeavyRequestContext.Current.App != null) {
        Layout = "~/Views/App/_Layout.cshtml";
    } else if (WeavyRequestContext.Current.Space != null) {
        Layout = "~/Views/Space/_Layout.cshtml";
    } else {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
